@page "/"

<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px;">
    <div style="padding: 20px; background: var(--color-primary); color: var(--color-on-primary); border-radius: 8px; text-align: center;">
        <h3 style="margin: 0 0 10px 0; font-weight: 600;">Primary</h3>
        <p style="margin: 0; opacity: 0.9; font-size: 14px;">Main brand color</p>
    </div>
    <div style="padding: 20px; background: var(--color-secondary); color: var(--color-on-secondary); border-radius: 8px; text-align: center;">
        <h3 style="margin: 0 0 10px 0; font-weight: 600;">Secondary</h3>
        <p style="margin: 0; opacity: 0.9; font-size: 14px;">Supporting color</p>
    </div>
    <div style="padding: 20px; background: var(--color-tertiary); color: var(--color-on-tertiary); border-radius: 8px; text-align: center;">
        <h3 style="margin: 0 0 10px 0; font-weight: 600;">Tertiary</h3>
        <p style="margin: 0; opacity: 0.9; font-size: 14px;">Accent color</p>
    </div>
    <div style="padding: 20px; background: var(--color-error); color: var(--color-on-error); border-radius: 8px; text-align: center;">
        <h3 style="margin: 0 0 10px 0; font-weight: 600;">Error</h3>
        <p style="margin: 0; opacity: 0.9; font-size: 14px;">Error states</p>
    </div>
</div>

<div style="margin-top: 30px; padding: 20px; background: var(--color-surface-variant); color: var(--color-on-surface-variant); border-radius: 8px;">
    <h3 style="margin: 0 0 10px 0;">Surface Variant</h3>
    <p style="margin: 0;">This shows how secondary surfaces look with the current theme. Try changing the primary color and switching between light/dark modes to see the full Material You color system in action.</p>
</div>