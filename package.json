{
  "name": "prism-ui",
  "version": "0.0.1-alpha.1",
  "description": "A modern, cross-framework design system built with Material You principles",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build:tokens && npm run build:blazor",
    "build:blazor": "dotnet build",
    "build:tokens": "echo 'Tokens build - coming soon'",
    "test": "dotnet test",
    "dev:blazor-server": "dotnet run --project apps/blazor-demo-server",
    "dev:blazor-wasm": "dotnet run --project apps/blazor-demo-wasm"
  },
  "keywords": [
    "design-system",
    "blazor",
    "react",
    "vue",
    "material-design",
    "tailwind",
    "components"
  ],
  "author": "Andy Aristide Cotruta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AndyCotruta/prism-ui"
  },
  "dependencies": {
    "@material/material-color-utilities": "^0.3.0",
    "@tailwindcss/cli": "^4.1.12",
    "tailwindcss": "^4.1.12"
  }
}
